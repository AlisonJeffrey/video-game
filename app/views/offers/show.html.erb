<div class="container">
  <div class="row">
    <div class="col-6 mt-3">
      <h1>Title</h1>
      <%= image_tag @offer.video_game.image_url, class: "card-show" %>
      <h2>Details</h2>
      <h3>Text price</h3>
      <p><%= @offer.video_game.overview %></p>
    </div>
    <div class="col-6 mt-3">
      <div style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-markers-value="<%= @marker.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      <div class="checkout-wrapper">
        <div class="row">
          <div class="col-12">
            <label for="total-price">Total price</label>
            <input type="text">
          </div>
          <div class="col-6 p-3">
            <label for="start-date">start date</label>
            <input type="text">
          </div>
          <div class="col-6 p-3">
            <label for="end-date">end date</label>
            <input type="text">
          </div>
          <div class="col-12">
            <%= link_to "Add to Cart", bookings_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
