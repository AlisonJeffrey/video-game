<%= render 'offers/category_buttons' %>
<div class="container">
  <h4 class="d-flex justify-content-center">Featured</h4>
  <div class='container cards'>
    <% @offers.each do |offer| %>
      <div class="card-trip mb-5">
        <%= image_tag offer.video_game.image_url, alt: offer.video_game.title %>
        <div>
          <div class="card-trip-infos">
            <div>
              <h2><strong><%= offer.video_game.title.upcase %></strong></h2>
              <p class='mb-2'><strong><%= offer.video_game.category %></strong></p>
              <p class="card-trip-pricing"><strong>¥<%= offer.price %></strong></p>
              <%= link_to "", offer_path(offer), class: "card-link"  %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
